@model IEnumerable<Projeto01.GestaoVendas.Models.Pagamento>

@{
    ViewBag.Title = "ver Pagamentos";
}

<h2>Pagamentos Lançados e Efetuados</h2>

<p>
    @Html.ActionLink("Novo Pagamento", "EfetuarPagamento")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumeroPedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroCartao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPagamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroPedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroCartao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataPagamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @if (item.Status == 1)
            {
                <span>Fatura finalizada</span>
            }
            else
            {
                @Html.ActionLink("Efetivar Pagamento", "EfetivarPagamento", new { id = item.PagamentoId }, new { @class = "btn btn-primary" })
            }
        </td>
    </tr>
}

</table>
