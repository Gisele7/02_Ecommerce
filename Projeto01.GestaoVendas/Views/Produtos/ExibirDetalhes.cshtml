@model Projeto01.GestaoVendas.Models.Produto

@{
    Layout = null;
}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">x</span>
            </button>
            <h4 class="modal-title">Detalhes do Produto</h4>

        </div>
        <div class="modal-body">
            <div class="text-center">
                <img src="@Url.Action("BuscarProduto", "Produtos", new { id = Model.Id })" style="width:180px;" />
            </div>
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Unidade)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Unidade)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Preco)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Preco)
                </dd>

            </dl>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        </div>
    </div>
</div>
